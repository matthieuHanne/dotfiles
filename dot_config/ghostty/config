mouse-scroll-multiplier = 1
confirm-close-surface = false

# URL clicking
link-url = true

# Cursor
cursor-style = block
cursor-style-blink = true

# Scrollback
scrollback-limit = 10000

# Window
window-colorspace = display-p3
