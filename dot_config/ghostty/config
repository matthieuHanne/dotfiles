#keybind = super+left=text:\x1b[17~     # Previous tab

# Function Keys (F1-F12) with Ctrl
# These map to tmux window switching in your config
keybind = ctrl+1=text:\x1b[1;5P        # Ctrl+F1
keybind = ctrl+2=text:\x1b[1;5Q        # Ctrl+F2
keybind = ctrl+3=text:\x1b[1;5R        # Ctrl+F3
keybind = ctrl+4=text:\x1b[1;5S        # Ctrl+F4
keybind = ctrl+5=text:\x1b[15;5~       # Ctrl+F5
keybind = ctrl+6=text:\x1b[17;5~       # Ctrl+F6
keybind = ctrl+7=text:\x1b[18;5~       # Ctrl+F7
keybind = ctrl+8=text:\x1b[19;5~       # Ctrl+F8
keybind = ctrl+9=text:\x1b[20;5~       # Ctrl+F9
keybind = ctrl+0=text:\x1b[21;5~       # Ctrl+F10  
