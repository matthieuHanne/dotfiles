macos-titlebar-style = transparent

# Custom Keybindings
# Window Management
#keybind = super+w=text:\x1b[21~        # Close tab
#keybind = super+t=text:\x1b[20~        # New tab
#keybind = super+d=text:\x1b[19~        # Split vertical
#keybind = super+shift+d=text:\x1b[18~  # Split horizontal

# Navigation
