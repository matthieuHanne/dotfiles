#!/bin/bash

set -e

function step() {
  echo
  echo "ğŸ”¹ $1"
  echo "----------------------------------------"
}

echo "ğŸš€ Starting full macOS setup..."

# ----------------------------------------
# ğŸ›  Xcode Command Line Tools
# ----------------------------------------
step "Checking for Xcode Command Line Tools"

if ! xcode-select -p >/dev/null 2>&1; then
  echo "ğŸ“¦ Installing Xcode Command Line Tools..."
  xcode-select --install
  until xcode-select -p >/dev/null 2>&1; do
    sleep 5
  done
  echo "âœ… Xcode tools installed."
else
  echo "âœ… Xcode tools already installed."
fi

# ----------------------------------------
# ğŸº Homebrew
# ----------------------------------------
step "Checking for Homebrew"

if ! command -v brew >/dev/null 2>&1; then
  echo "ğŸº Installing Homebrew..."
  /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
  eval "$(/opt/homebrew/bin/brew shellenv)"
  echo "âœ… Homebrew installed."
else
  echo "âœ… Homebrew already installed."
fi

# ----------------------------------------
# ğŸ“¦ Brew Packages
# ----------------------------------------
step "Installing Homebrew packages"

brew bundle --file=/dev/stdin <<EOF
# 
brew "zsh"
brew "htop"
brew "git"
brew "lazygit"
brew "node"
brew "go"
brew "chezmoi"
brew "neovim"
brew "ripgrep"
brew "fd"
brew "toilet"
brew "lolcat"
# ---- linters

# ---- cask
cask "obsidian"
cask "docker"
cask "ghostty"
cask "google-chrome"
cask "figma"
cask "notion"
EOF

echo "âœ… All brew packages installed."

# ----------------------------------------
# ğŸš Zsh and Plugins
# ----------------------------------------
step "Setting up Zsh and plugins"

ZSH_CUSTOM="$HOME/.oh-my-zsh/custom"

if [ ! -d "$HOME/.oh-my-zsh" ]; then
  echo "ğŸŒ€ Installing oh-my-zsh..."
  RUNZSH=no CHSH=no KEEP_ZSHRC=yes sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"
  echo "âœ… oh-my-zsh installed."
else
  echo "âœ… oh-my-zsh already installed."
fi

if [ ! -d "$ZSH_CUSTOM/plugins/zsh-autosuggestions" ]; then
  echo "âœ¨ Installing zsh-autosuggestions..."
  git clone https://github.com/zsh-users/zsh-autosuggestions "$ZSH_CUSTOM/plugins/zsh-autosuggestions"
else
  echo "âœ… zsh-autosuggestions already installed."
fi

if [ ! -d "$ZSH_CUSTOM/plugins/zsh-syntax-highlighting" ]; then
  echo "âœ¨ Installing zsh-syntax-highlighting..."
  git clone https://github.com/zsh-users/zsh-syntax-highlighting.git "$ZSH_CUSTOM/plugins/zsh-syntax-highlighting"
else
  echo "âœ… zsh-syntax-highlighting already installed."
fi
